<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <TextView android:text="@string/bitrate"
              android:id="@+id/labelBitrate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:layout_marginTop="20dip"
              android:layout_marginLeft="5dip"
              android:layout_marginStart="5dip"
              >
    </TextView>
    <TextView android:text=''
              android:id="@+id/inputBirate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:textStyle="bold"
              android:layout_marginTop="20dip"
              android:layout_marginLeft="5dip"
              android:layout_marginStart="5dip"
        >
    </TextView>
  </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <TextView android:text="@string/Date"
              android:id="@+id/labelDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:textStyle="bold"
              android:layout_below="@+id/labelBitrate"
              android:layout_marginTop="20dip"
              android:layout_marginLeft="5dip"
              android:layout_marginStart="5dip"
              >
    </TextView>
    <TextView android:text=""
              android:id="@+id/inputDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:layout_below="@+id/inputBirate"
              android:layout_toEndOf="@+id/labelDate"
              android:layout_toRightOf="@+id/labelDate"
              android:layout_marginTop="20dip"
              android:layout_marginLeft="5dip"
                >
    </TextView>
    </LinearLayout>
    <Button
        android:text="@string/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayButton"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/inputDate"
        />
    </LinearLayout>